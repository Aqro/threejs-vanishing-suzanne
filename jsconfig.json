{
    "compilerOptions": {
        "target": "esnext",
        "allowSyntheticDefaultImports": false,
        "baseUrl": "./",
        "paths": {
            "@comps/*": ["./src/js/components/*"],
            "@scene/*": ["./src/js/scene/*"],
            "@ctrl/*": ["./src/js/controllers/*"],
            "@mat/*": ["./src/js/materials/*"],
            "@params/*": ["./src/js/params/*"],
            "@passes/*": ["./src/js/passes/*"],
            "@gpu/*": ["./src/js/gpu-shaders/*"],
            "@utils/*": ["./src/js/utils/*"]
        }
    },
    "include": ["src/**/*"]
}
